<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patients and Providers Data</title>
</head>
<body>
    <h1>Patients List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            <% patients.forEach(function(patient) { %>
                <tr>
                    <td><%= patient.patient_id %></td>
                    <td><%= patient.first_name %></td>
                    <td><%= patient.last_name %></td>
                    <td><%= patient.date_of_birth %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h1>Providers List</h1>
    <table border="1">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
            </tr>
        </thead>
        <tbody>
            <% providers.forEach(function(provider) { %>
                <tr>
                    <td><%= provider.first_name %></td>
                    <td><%= provider.last_name %></td>
                    <td><%= provider.provider_specialty %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h1>Patients Ordered by First Name</h1>
    <table border="1">
        <thead>
            <tr>
                <th>Patient ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Date of Birth</th>
            </tr>
        </thead>
        <tbody>
            <% PatientsFirstname.forEach(function(patient) { %>
                <tr>
                    <td><%= patient.patient_id %></td>
                    <td><%= patient.first_name %></td>
                    <td><%= patient.last_name %></td>
                    <td><%= patient.date_of_birth %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <h1>Providers Ordered by Specialty</h1>
    <table border="1">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
            </tr>
        </thead>
        <tbody>
            <% Specialty.forEach(function(provider) { %>
                <tr>
                    <td><%= provider.first_name %></td>
                    <td><%= provider.last_name %></td>
                    <td><%= provider.provider_specialty %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>
